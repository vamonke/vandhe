extends layout

block content
  .index
    .home-form
      if user 
        //- p= user
        form(method='GET', action='/papers')
          //- button.btn.btn-warning.button-outline.back-button(type='button') Back
          section
            //- .progress
            //-   .progress-bar.bg-warning(role='progressbar', style='width: 67%', aria-valuenow='67', aria-valuemin='0', aria-valuemax='100')
            fieldset
              legend
                | What paper are you looking for?
              input(type='hidden', name='school', value='EEE')
              input(type='hidden', name='course', value='IEM')
              .row
                .col-12
                  .form-group
                    select.form-control#modules(name='code')
                      option(disabled='', selected='')
                        | Select Module
              .row
                .col-6
                  .form-group
                    select.form-control(name='year')
                      option(disabled='disabled', selected='')
                        | Year
                      option
                        | 2018
                      option
                        | 2017
                      option
                        | 2016
                      option
                        | 2015
                .col-6
                  .form-group
                    select.form-control(name='sem')
                      option(disabled='disabled', selected='')
                        | Semester
                      option
                        | 1
                      option
                        | 2
          input.btn.btn-warning(type='submit', value='Submit')
        script(src='js/home.js')
        
      else
        form(method='GET', action='/papers', data-step='1')
          section(data-step='1')
            .progress
              .progress-bar.bg-warning(role='progressbar', style='width: 0%', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100')
            fieldset
              legend What school are you from?
              .row
                .col-3
                .col-3
                  input#radio-scbe(type='radio', name='school', value='SCBE')
                  label.btn.btn-outline-light.school-button.schoolRadioLabel(for='radio-scbe')
                    img.school-icon(src='images/scbe.svg', width='32px')
                    img.school-icon-white(src='images/scbe-white.svg', width='32px')
                    br
                    | SCBE
                .col-3
                  input#radio-eee(type='radio', name='school', value='EEE')
                  label.btn.btn-outline-light.school-button.schoolRadioLabel(for='radio-eee') 
                    img.school-icon(src='images/eee.svg', width='32px')
                    img.school-icon-white(src='images/eee-white.svg', width='32px')
                    br
                    | EEE
                .col-3
              .row
                .col-3
                .col-3
                  input#radio-mae(type='radio', name='school', value='MAE')
                  label.btn.btn-outline-light.school-button.schoolRadioLabel(for='radio-mae')
                    img.school-icon(src='images/mae.svg', width='32px')
                    img.school-icon-white(src='images/mae-white.svg', width='32px')
                    br
                    | MAE
                .col-3
                  input#radio-cee(type='radio', name='school', value='CEE')
                  label.btn.btn-outline-light.school-button.schoolRadioLabel(for='radio-mae')
                    img.school-icon(src='images/cee.svg', width='32px')
                    img.school-icon-white(src='images/cee-white.svg', width='32px')
                    br
                    | CEE
                .col-3
          section(data-step='2')
            .progress
              .progress-bar.bg-warning(role='progressbar', style='width: 33%', aria-valuenow='33', aria-valuemin='0', aria-valuemax='100')
            fieldset
              legend
                | What course are you from?
              .row#select-course-home
                .col-3
                  i.fas.fa-chevron-left
                .col-3
                  input#course-eee(type='radio', name='course', value='EEE')
                  label.btn.btn-outline-light.school-button(for='course-eee')
                    img.school-icon(src='images/eee.svg', width='32px')
                    img.school-icon-white(src='images/eee-white.svg', width='32px')
                    br
                    | EEE
                .col-3
                  input#course-iem(type='radio', name='course', value='IEM')
                  label.btn.btn-outline-light.school-button(for='course-iem')
                    img.school-icon(src='images/iem.svg', width='32px')
                    img.school-icon-white(src='images/iem-white.svg', width='32px')
                    br
                    | IEM
                .col-3
          section(data-step='3')
            .progress
              .progress-bar.bg-warning(role='progressbar', style='width: 67%', aria-valuenow='67', aria-valuemin='0', aria-valuemax='100')
            fieldset
              legend
                | What paper are you looking for?
              .row
                .col-3
                  i.fas.fa-chevron-left
                .col-6
                  .form-group
                    select.form-control#modules(name='code')
                      option(disabled='', selected='')
                        | Select Module
                .col-3              
              .row
                .col-3
                .col-3
                  .form-group
                    select.form-control(name='year')
                      option(disabled='disabled', selected='')
                        | Year
                      option
                        | 2018
                      option
                        | 2017
                      option
                        | 2016
                      option
                        | 2015
                .col-3
                  .form-group
                    select.form-control(name='sem')
                      option(disabled='disabled', selected='')
                        | Semester
                      option
                        | 1
                      option
                        | 2
                .col-3
          label.login-link
            | Done this already? Log In 
            a(href='/login') here!
          input.btn.btn-warning.button.button-primary(type='submit', value='Submit')

        script(src='js/form.js')


