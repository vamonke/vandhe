.container#paper-main-container
  if (mod)
    .row    
      .col-12
        h1= mod.code + ' ' + mod.name
        a(id='ask-question')
          .btn.btn-primary
            | Ask Question
    if (threads.length)
      div.forum-sort-box
        span Sort by:
        = ' '
        a(href='?sortBy=score') Top
        a(href='?sortBy=latest') Latest
        a(href='?sortBy=replies') Replies
      .row.forum-labels
        .col-12
          hr
        .col-1.center Score
        .col-8 Topic
        .col-1.center Replies
        .col-2.center Activity
      each thread in threads
        .row.thread-card
          .col-1.center.votes(data-user-vote=thread.userVote data-post-id=thread._id)
            a.upvote ▲
            h1.vote-count= thread.votes
            a.downvote ▼
          .col-8
            a(href= mod.code + '/' + thread._id)
              h4= thread.title
            p.description= thread.description
          .col-1.center= thread.replyCount || 0
          .col-2.center
            if thread.lastReplied
              div Last replied
              =thread.lastReplied
            else
              div Asked
              =thread.createdAt
      script(src='/js/vote.js')
    else
      hr
      p No questions yet
  else
    .no-paper
      h1 We could not find what you were looking for. Try searching again?
      h1 OR
      h1 Ask a question!
      a(href="#")
        input.btn.btn-warning.button.button-primary(type='button', value='PYP Help')
